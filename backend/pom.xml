                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>jaxb2-maven-plugin</artifactId>
                <version>2.5.0</version>
                <executions>
                    <execution>
                        <id>xjc</id>
                        <goals>
                            <goal>xjc</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <sources>
                        <source>${project.basedir}/src/main/resources/ws/events.xsd</source>
                        <source>${project.basedir}/src/main/resources/ws/tasks.xsd</source>
                        <source>${project.basedir}/src/main/resources/ws/eventById.xsd</source>
                        <source>${project.basedir}/src/main/resources/ws/powerStations.xsd</source>
                    </sources>
                </configuration>
